rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==================== HELPER FUNCTIONS ====================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Get current user ID
    function currentUser() {
      return request.auth.uid;
    }
    
    // Check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(currentUser())).data.role == 'admin';
    }
    
    // Check if user owns the resource
    function isOwner(ownerId) {
      return isAuthenticated() && currentUser() == ownerId;
    }
    
    // Check if user is a participant
    function isParticipant(participants) {
      return isAuthenticated() && 
             participants != null && 
             currentUser() in participants;
    }
    
    // Validate UID matches
    function uidMatches(uid) {
      return isAuthenticated() && currentUser() == uid;
    }
    
    // ==================== USER DATA - STRICT UID ISOLATION ====================
    
    // User profile - public read for stats, owner/admin for full access
    match /users/{userId} {
      allow read: if true;  // Public read for homepage stats
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isAdmin();
    }
    
    // User's projects - nested under user namespace
    match /users/{userId}/projects/{projectId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // User's messages - strict isolation
    match /users/{userId}/messages/{messageId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // User's notifications - owner only
    match /users/{userId}/notifications/{notificationId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // User's files - strict isolation
    match /users/{userId}/files/{fileId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // User's chats - owner only
    match /users/{userId}/chats/{chatId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // User's deals - owner only
    match /users/{userId}/deals/{dealId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // User's contacts - owner only
    match /users/{userId}/contacts/{contactId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // User's settings - owner only
    match /users/{userId}/settings/{settingId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // User's activities - owner only
    match /users/{userId}/activities/{activityId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // ==================== SHARED COLLECTIONS WITH OWNERSHIP ====================
    
    // Projects - public read for homepage stats, authenticated write
    match /projects/{projectId} {
      allow read: if true;  // Public read for homepage stats
      allow create: if isAuthenticated() && 
                      (request.resource.data.founderId == currentUser() || 
                       request.resource.data.ownerId == currentUser());
      allow update: if isAuthenticated() && 
                      (resource.data.founderId == currentUser() || 
                       resource.data.ownerId == currentUser() ||
                       isAdmin());
      allow delete: if (resource.data.founderId == currentUser() || 
                       resource.data.ownerId == currentUser() ||
                       isAdmin());
    }
    
    // Chat rooms - must be participant
    match /chat_rooms/{chatId} {
      allow read: if isAuthenticated() && 
                    (isParticipant(resource.data.participants) || isAdmin());
      allow create: if isAuthenticated() && 
                      isParticipant(request.resource.data.participants);
      allow update: if isAuthenticated() && 
                      (isParticipant(resource.data.participants) || isAdmin());
      allow delete: if isAdmin();
    }
    
    // Messages within chat - must be participant of parent chat
    match /chat_rooms/{chatId}/messages/{messageId} {
      allow read: if isAuthenticated() && 
                    (isParticipant(get(/databases/$(database)/documents/chat_rooms/$(chatId)).data.participants) || 
                     isAdmin());
      allow create: if isAuthenticated() && 
                      isParticipant(get(/databases/$(database)/documents/chat_rooms/$(chatId)).data.participants) &&
                      request.resource.data.userId == currentUser();
      allow update: if isAuthenticated() && 
                      (resource.data.userId == currentUser() || isAdmin());
      allow delete: if resource.data.userId == currentUser() || isAdmin();
    }
    
    // Deals - must be participant
    match /deals/{dealId} {
      allow read: if isAuthenticated() && 
                    (isParticipant(resource.data.participants) || isAdmin());
      allow create: if isAuthenticated() && 
                      isParticipant(request.resource.data.participants);
      allow update: if isAuthenticated() && 
                      (isParticipant(resource.data.participants) || isAdmin());
      allow delete: if isAdmin();
    }
    
    // Notifications - owner only
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && 
                    (resource.data.userId == currentUser() || isAdmin());
      allow create: if isAuthenticated();
      allow update: if resource.data.userId == currentUser() || isAdmin();
      allow delete: if resource.data.userId == currentUser() || isAdmin();
    }
    
    // ==================== RAFTAI COLLECTIONS - OWNER OR ADMIN ====================
    
    // RaftAI KYC requests - owner or admin
    match /raftai_kyc_requests/{requestId} {
      allow read: if isAuthenticated() && 
                    (resource.data.userId == currentUser() || isAdmin());
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == currentUser();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // RaftAI KYC results - owner or admin
    match /raftai_kyc_results/{resultId} {
      allow read: if isAuthenticated() && 
                    (resource.data.userId == currentUser() || isAdmin());
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // RaftAI KYB requests - organization owner or admin
    match /raftai_kyb_requests/{requestId} {
      allow read: if isAuthenticated() && 
                    (resource.data.organizationId == currentUser() || isAdmin());
      allow create: if isAuthenticated() && 
                      request.resource.data.organizationId == currentUser();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // RaftAI KYB results - organization owner or admin
    match /raftai_kyb_results/{resultId} {
      allow read: if isAuthenticated() && 
                    (resource.data.organizationId == currentUser() || isAdmin());
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // RaftAI pitch analyses - project owner or admin
    match /raftai_pitch_analyses/{analysisId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // RaftAI chat interactions - session participant or admin
    match /raftai_chat_interactions/{interactionId} {
      allow read: if isAuthenticated() && 
                    (resource.data.userId == currentUser() || isAdmin());
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == currentUser();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // RaftAI audit logs - admin only (read), system only (write)
    match /raftai_audit_logs/{auditId} {
      allow read: if isAdmin();
      allow create: if isAdmin(); // In production, this would be service account only
      allow update: if false; // Immutable
      allow delete: if false; // Never delete audit logs
    }
    
    // RaftAI counterparty scores - entity or admin
    match /raftai_counterparty_scores/{entityId} {
      allow read: if isAuthenticated() && 
                    (entityId == currentUser() || isAdmin());
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // ==================== SECURITY LOGS - ADMIN ONLY ====================
    
    match /security_logs/{logId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
      allow update: if false;
      allow delete: if false;
    }
    
    // ==================== SYSTEM COLLECTIONS - READ-ONLY FOR USERS ====================
    
    match /raftai_system_health/{healthId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // ==================== PUBLIC COLLECTIONS (HOMEPAGE) ====================
    
    // Spotlight collection - public read for homepage
    match /spotlights/{spotlightId} {
      allow read: if true;  // Public read access for homepage
      allow write: if isAuthenticated();  // Authenticated write only
    }
    
    // ==================== DENY ALL OTHER ACCESS ====================
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

